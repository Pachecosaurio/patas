<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestorbiblioteca.controlador.UsuariosController">
   <top>
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="🔍 Buscar:">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtBuscar" prefWidth="300.0" promptText="Buscar por nombre, apellido, email o tipo..." />
                  <Button fx:id="btnBuscar" text="Buscar" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnAgregar" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="➕ Agregar Usuario" />
               </children>
            </HBox>
            <Separator />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <HBox spacing="10.0">
         <children>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="👥 Lista de Usuarios">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <TableView fx:id="tablaUsuarios" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colNombre" prefWidth="120.0" text="Nombre" />
                        <TableColumn fx:id="colApellido" prefWidth="120.0" text="Apellido" />
                        <TableColumn fx:id="colEmail" prefWidth="180.0" text="Email" />
                        <TableColumn fx:id="colTelefono" prefWidth="120.0" text="Teléfono" />
                        <TableColumn fx:id="colTipo" prefWidth="120.0" text="Tipo" />
                        <TableColumn fx:id="colActivo" prefWidth="80.0" text="Estado" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
            <VBox spacing="10.0" minWidth="320.0" maxWidth="320.0">
               <children>
                  <Label text="📝 Datos del Usuario">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox spacing="15.0">
                           <children>
                              <GridPane hgap="10.0" vgap="10.0">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="NEVER" minWidth="90.0" />
                                    <ColumnConstraints hgrow="ALWAYS" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                 </rowConstraints>
                                 <children>
                                    <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    <Label text="Apellido:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtApellido" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtTelefono" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtDireccion" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    <Label text="Tipo Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="5">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <ComboBox fx:id="cmbTipoUsuario" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                    <Label text="Fecha Registro:" GridPane.columnIndex="0" GridPane.rowIndex="6">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <DatePicker fx:id="dpFechaRegistro" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                                    <Label text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="7">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <CheckBox fx:id="chkActivo" text="Usuario Activo" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                                 </children>
                              </GridPane>
                              <Separator />
                              <HBox spacing="10.0">
                                 <children>
                                    <Button fx:id="btnModificar" disable="true" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="✏️ Modificar" />
                                    <Button fx:id="btnEliminar" disable="true" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="🗑️ Eliminar" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </center>
</BorderPane>