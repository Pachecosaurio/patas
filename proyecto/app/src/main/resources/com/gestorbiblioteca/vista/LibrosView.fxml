<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestorbiblioteca.controlador.LibrosController">
   <top>
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="🔍 Buscar:">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtBuscar" prefWidth="300.0" promptText="Buscar por título, autor, categoría o ISBN..." />
                  <Button fx:id="btnBuscar" text="Buscar" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnAgregar" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="➕ Agregar Libro" />
               </children>
            </HBox>
            <Separator />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <HBox spacing="10.0">
         <children>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="📋 Lista de Libros">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <TableView fx:id="tablaLibros" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colTitulo" prefWidth="200.0" text="Título" />
                        <TableColumn fx:id="colAutor" prefWidth="150.0" text="Autor" />
                        <TableColumn fx:id="colIsbn" prefWidth="120.0" text="ISBN" />
                        <TableColumn fx:id="colCategoria" prefWidth="100.0" text="Categoría" />
                        <TableColumn fx:id="colDisponible" prefWidth="100.0" text="Estado" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
            <VBox spacing="10.0" minWidth="350.0" maxWidth="350.0">
               <children>
                  <Label text="📝 Detalles del Libro">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox spacing="10.0">
                           <children>
                              <ImageView fx:id="imgPortada" fitHeight="200.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../../../biblioteca-fondo.jpg" />
                                 </image>
                              </ImageView>
                              <GridPane hgap="10.0" vgap="10.0">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="NEVER" minWidth="80.0" />
                                    <ColumnConstraints hgrow="ALWAYS" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                 </rowConstraints>
                                 <children>
                                    <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtTitulo" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    <Label text="Autor:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtAutor" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtIsbn" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Label text="Categoría:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtCategoria" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    <Label text="Fecha Pub.:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtFechaPublicacion" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    <Label text="Imagen:" GridPane.columnIndex="0" GridPane.rowIndex="5">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtImagenPath" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                 </children>
                              </GridPane>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label text="Descripción:">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextArea fx:id="txtDescripcion" prefRowCount="4" wrapText="true" />
                                 </children>
                              </VBox>
                              <HBox spacing="10.0">
                                 <children>
                                    <Button fx:id="btnModificar" disable="true" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="✏️ Modificar" />
                                    <Button fx:id="btnEliminar" disable="true" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="🗑️ Eliminar" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </center>
</BorderPane>